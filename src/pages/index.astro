---
import Navigation from "@components/Navigation.astro";
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import hero from "@public/images/hero.webp"
---

<Layout title="Ableton">
    <Navigation />
    <main class="flex items-center justify-center">
        <div class="relative">
            <Image src={hero} alt="A men in the studio" width={hero.width} height={hero.height*0.7}/>
            <h1 class="absolute font-extrabold top-1/3 left-1/4 text-9xl text-orange font-futura">Abelton</h1>
        </div>
    </main>
</Layout>